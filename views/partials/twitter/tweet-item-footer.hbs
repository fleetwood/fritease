<div class="ProfileTweet-actionCountList" style="padding: 1em; background: rgba(0,0,0,0.05); border-radius: 5px; margin-top: 1em;">
    <span class="ProfileTweet-action--retweet">
        <span class="ProfileTweet-actionCount" aria-hidden="true" data-tweet-stat-count="0">
            <span class="Icon Icon-medium Icon--promotedTrend" id="profile-tweet-action-rank-count-aria-{{id}}">
                {{user.rank}} Rank
            </span>
        </span>
    </span>
    <span class="ProfileTweet-action--retweet">
        <span class="ProfileTweet-actionCount" aria-hidden="true" data-tweet-stat-count="0">
            <span class="Icon Icon-medium Icon--retweeted" id="profile-tweet-action-retweet-count-aria-{{id}}">
                {{retweets}} retweets
            </span>
        </span>
    </span>
    <span class="ProfileTweet-action--favorite">
        <span class="ProfileTweet-actionCount ProfileTweet-actionCount--isZero" aria-hidden="true"
            data-tweet-stat-count="0">
            <span class="Icon Icon-medium Icon--heartBadge" id="profile-tweet-action-favorite-count-aria-{{id}}">
                {{likes}} likes
            </span>
        </span>
    </span>
    <span class="ProfileTweet-action--ff5">
        {{#if user.isFF}}
        <span class="ProfileTweet-actionCount" aria-hidden="true" data-tweet-stat-count="0">
            <span class="Icon Icon-medium Icon--circleActiveHeart" id="profile-tweet-action-ff5-count-aria-{{id}}">
                FF5 ({{user.ff5.length}})
            </span>
        </span>
        {{else}}
        <span class="ProfileTweet-actionCount ProfileTweet-actionCount--isZero" aria-hidden="true"
            data-tweet-stat-count="0">
            <span class="Icon Icon-medium Icon--follow" id="profile-tweet-action-ff5-count-aria-{{id}}">FF5</span>
        </span>
        {{/if}}
    </span>
</div>